extends base.pug

block content
    h4 Change Title of video
    form(method="POST")
        input(name="title", placeholder="Video Title", value=videoMember.title, required)
        input(name="description", placeholder="Description", required, type="text", minlength=20, value=videoMember.description)
        input(name="hashtags", placeholder="Hashtags, separated by comma", required, type="text", value=videoMember.hashtags.join())
        input(value="Save", type="submit")